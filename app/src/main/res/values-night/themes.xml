<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SaKU" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryVariant">@color/darkColorPrimaryDark</item>
        <item name="colorOnPrimary">@color/darkTextPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkColorSecondary</item>
        <item name="colorSecondaryVariant">@color/darkColorSecondaryDark</item>
        <item name="colorOnSecondary">@color/darkTextPrimary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/darkBackground</item>

        <!-- Input field styles -->
        <item name="textInputStyle">@style/Widget.SaKU.Dark.TextInputLayout</item>
        <item name="editTextStyle">@style/Widget.SaKU.Dark.EditText</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.SaKU.Dark.Button</item>

        <!-- Text color -->
        <item name="android:textColorPrimary">@color/darkTextPrimary</item>
        <item name="android:textColorSecondary">@color/darkTextSecondary</item>
        <item name="android:textColorHint">@color/darkTextHint</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/darkBackground</item>
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="colorSurface">@color/darkSurface</item>
        <item name="colorBackgroundFloating">@color/darkBackgroundElevated</item>
        <item name="colorOnSurface">@color/darkTextPrimary</item>
        <item name="colorOnBackground">@color/darkTextPrimary</item>
    </style>

    <!-- Text styles -->
    <style name="ToolbarTitleStyle.Dark" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/darkTextPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.SaKU.Dark.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/darkTextPrimary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.SaKU.Dark.FormLabel" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/darkTextSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Input styles -->
    <style name="Widget.SaKU.Dark.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/darkColorPrimary</item>
        <item name="hintTextColor">@color/darkColorPrimary</item>
        <item name="boxBackgroundColor">@color/darkInputBackground</item>
    </style>

    <style name="Widget.SaKU.Dark.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">14dp</item>
        <item name="android:background">@drawable/edittext_border_dark</item>
        <item name="android:textColor">@color/darkTextPrimary</item>
        <item name="android:textColorHint">@color/darkTextHint</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.SaKU.Dark.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@color/darkColorPrimary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/darkBackground</item>
    </style>

    <style name="LargeBottomNavigationView.Dark" parent="Widget.Design.BottomNavigationView">
        <item name="android:minHeight">65dp</item>
        <item name="itemIconSize">28dp</item>
        <item name="itemIconTint">@color/bottom_nav_icon_selected_dark</item>
        <item name="itemTextColor">@color/bottom_nav_icon_selected_dark</item>
        <item name="itemTextAppearanceActive">@style/LargeBottomNavigationView.Dark.TextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/LargeBottomNavigationView.Dark.TextAppearance</item>
        <item name="android:background">@color/darkNavigationBackground</item>
    </style>

    <style name="LargeBottomNavigationView.Dark.TextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darkTextPrimary</item>
    </style>
</resources>